rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // REGLAS SIMPLIFICADAS PARA DESARROLLO
    // En producción deberás hacer estas reglas más restrictivas
    
    // Función auxiliar para verificar si es admin
    function isAdmin() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Reglas para usuarios
    match /users/{userId} {
      allow read: if true; // Lectura pública (solo desarrollo)
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // Reglas para servidores
    match /servers/{serverId} {
      allow read: if true;
      allow write: if true;
      
      // Subcolección de métricas
      match /metrics/{metricId} {
        allow read: if true;
        allow write: if true;
      }
    }
    
    // Reglas para incidentes
    match /incidents/{incidentId} {
      allow read: if true;
      allow write: if true;
    }

    // Reglas para alertas
    match /alerts/{alertId} {
      allow read: if true;
      allow write: if true;
    }

    // Registros de auditoría
    match /audit_logs/{logId} {
      allow read: if true;
      allow create: if true;
    }

    // Políticas de seguridad
    match /security_policies/{policyId} {
      allow read: if true;
      allow write: if true;
    }

    // Configuración del sistema
    match /config/{docId} {
      allow read: if true;
      allow write: if true;
    }

    // Estadísticas
    match /stats/{docId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
