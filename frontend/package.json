{
  "name": "lincoln-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "typescript": "^4.9.5"
  },
  "scripts": {
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "serve": "npx http-server . -p 3000 -o",
    "start": "npm run build:ts && npm run serve",
    "dev": "npm run build:ts && npm run serve",
    "lint": "eslint ts --ext .ts",
    "format": "prettier --write \"ts/**/*.ts\" \"styles/**/*.css\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-import": "^2.27.5",
    "prettier": "^2.8.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
